<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/country_info_item_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/country_info_item_confirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/country_info_item_country"
        app:layout_constraintBottom_toTopOf="@id/country_info_item_deaths" />

    <TextView
        android:id="@+id/country_info_item_deaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/country_info_item_country"
        app:layout_constraintTop_toBottomOf="@id/country_info_item_confirmed"
        app:layout_constraintBottom_toBottomOf="@id/country_info_item_recovered" />

    <TextView
        android:id="@+id/country_info_item_recovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/country_info_item_country"
        app:layout_constraintTop_toBottomOf="@id/country_info_item_deaths"/>

</androidx.constraintlayout.widget.ConstraintLayout>